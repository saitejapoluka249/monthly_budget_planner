<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <!-- Reset styles -->
    <link rel="stylesheet" href="https://unpkg.com/modern-css-reset/dist/reset.min.css" />
    <!-- Google Fonts Muli -->
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@300;400;700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <section class="wrapper">
      <form method="post" action="/profile">
        <div class="container">
            <div class="img__container">
            <img src="<%=show1.myImages%>" alt="No Profile" class="img"> 
        </div>   
            <div class="content">
          
                <h1 class="title">Your Profile</h1>
                <input type="text" class="mail" placeholder="Your Full Name" name="uname" value="<%=show.uname%>" required>
                <input type="email" class="mail" placeholder="Your email address" name="umail" value="<%=show.umail%>" required>
                <input type="number" class="mail" placeholder="Your Mobile Number" name="unumber" value="<%=show.unumber%>" required>
                <input type="text" class="mail" placeholder="Your Gender" name="ugender" value="<%=show.ugender%>" required>
                <input type="hidden" name="pkey" value="<%=show._id%>" required>
                <input type="submit" value="Add" class="subscribe">
            </div>
        </div>
      </form>
    </section>
</body>